<idea-plugin>
    <id>com.gptrefactoringtool.plugin</id>
    <name>ChatGPT Refactoring Tool</name>
    <version>1.0</version>
    <vendor email="info@gptrefactoringtool.com" url="https://gtprefactoringtool.com">Stevens' Pinnacle Scholars</vendor>
    <description>Refactoring plugin tool powered by ChatGPT.</description>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                id="com.gptrefactoringtool.plugin.gpt_tool"
                anchor="right"
                factoryClass="com.example.gpt_tool_factory"/>
        <action
                id="com.gptrefactoringtool.plugin.refactor"
                class="com.gptrefactoringtool.refactor"/>
    </extensions>
</idea-plugin>
